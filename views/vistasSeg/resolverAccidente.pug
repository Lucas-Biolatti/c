doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Analisis de Siniestros | Polimetal
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        link(href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet')
        script(src="https://unpkg.com/boxicons@2.0.9/dist/boxicons.js")
    body 
        div(class="container")
            a(href="/cierremtto") 
                div(style="text-align: center;")
                    img(src="./images/logo.jpg" alt="logo" class="img-fluid")
                  

            h2(class="bg-dark bg-gradient text-white")= "Descripcion del Siniestro N°"+idAccidente 
            div(class="container")
                div(class="row") 
                    p(class="col-3 p-2 mb-2 bg-danger text-white bg-gradient") Nombre del observador
                    p(class="col-3 p-2 mb-2" id="detecto")
                    
                    p(class="col-3 p-2 mb-2 bg-danger text-white bg-gradient") Fecha
                    p(class="col-3 p-2 mb-2" id="detecto")
                    
                    p(class="col-3 p-2 mb-2 bg-danger text-white bg-gradient") Tipo de Siniestro
                    p(class="col-3 p-2 mb-2" id="detecto")
                div(class="row")
                    p(class="col-3 p-2 mb-2 bg-danger text-white bg-gradient") Descripcion del Fenomeno
                    p(class="col-9 p-2 mb-2" id="detecto")
                    
                    
            hr
        
            hr
            h2(class="bg-dark bg-gradient text-white") Descripción de la Resolucion
            form(action="addCierreAccident", method="post", enctype="multipart/form-data")

                div(class="row")
                    input(type="hidden", name="idOrden", value=idAccidente)
                    div(class="col-md-3")
                        label(for="fecha" class="form-label") Fecha
                        input(type="date" class="form-control" id="fecha" name="fecha" required)
                    div(class="d-grid gap-2 d-md-flex justify-content-md-end")
                        input(type="submit", value="Cerrar Siniestro" class="button btn-success btn-lg")
                        
                        input(type="reset", value="Limpiar" class="button btn-secondary btn-lg")
                hr
                div(class="row")
                    h3 Analisis de Causas
                    div(class="col-md-6")
                        label(for="filecausa" class="form-label") Diagrama de Ishikawa
                        input(type="file", name="filecausa" class="form-control" id="filecausa")
                    
                hr
                div(class="row")
                    h3 Determinacion de Causas Raices
                    div(class="col-md-6")
                        label(for="filecausa" class="form-label") Analisis 5W
                        input(type="file", name="filecausa" class="form-control" id="filecausa")
                hr
                div(class="row")
                    h3 Acciones de Correccion    
                    div(class="col-md-6")
                        label(for="plan" class="form-label") Items del plan de accion
                        input(type="text", name="filecausa" class="form-control" id="plan")
                hr
                div(class="row")
                    h3 Estado del Siniestro 
                    div(class="col-md-3")    
                    
                        label(for="observaciones" class="form-label") Estado
                        select(name="estado" class="form-select")
                            option Pendiente 
                            option En Proceso 
                            option Cerrado
                br            
                
                
                
                    
                
                    
            
                        
                        
